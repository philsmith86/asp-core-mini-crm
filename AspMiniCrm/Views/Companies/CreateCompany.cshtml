@model  Company;
@{
    ViewData["Title"] = "Create Company";
}

<div class="container">
    <div class="my-auto" style="height: 20px;"></div>
    <form asp-action="CreateCompany" method="POST" role="form">
        <div class="form-group">
            <label asp-for="Name">Company Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Company Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Enter Company Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Web">Website</label>
            <input type="url" class="form-control" asp-for="Web" placeholder="Enter Company Website">
            <span asp-validation-for="Web" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create Company</button>
    </form>
</div>
