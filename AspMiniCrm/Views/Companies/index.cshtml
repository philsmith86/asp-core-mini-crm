@model AspMiniCrm.ViewModels.CompanyViewModel;

@{
    ViewData["Title"] = "Companies";
}

<div class="container">
    <div class="my-auto" style="height: 20px;"></div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Companies</th>
            </tr>
            <tr>
                <td>
                    <table class="table table-bordered">
                        <thead>
                            <tr class="active">
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Website</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var company in Model.Companies)
                            {
                                <tr>
                                    <td>@company.Id</td>
                                    <td>@company.Name</td>
                                    <td>@company.Email</td>
                                    <td><a href="@company.Web">@company.Web</a></td>
                                    <td>
                                        @Html.ActionLink("Edit", "EditCompany", "Companies", new { companyId = company.Id }, new { @class = "btn btn-primary btn-block" })
                                        <form asp-for="DeleteCompany">
                                            @Html.HiddenFor(c => company.Id)
                                            @Html.ActionLink("Delete", "DeleteCompany", "Companies", new { companyId = company.Id }, new { @class = "btn btn-danger btn-block" })
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.ActionLink("Create New Company", "CreateCompany", "Companies", null, new { @class = "btn btn-success" })
                </td>
            </tr>
        </thead>
    </table>
</div>