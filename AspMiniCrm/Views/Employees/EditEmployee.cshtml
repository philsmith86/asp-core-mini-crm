
@model Employee;
@{
    ViewData["Title"] = "Create Employee";
}

<div class="container">
    <div class="my-auto" style="height: 20px;"></div>
    <form asp-action="EditEmployee" method="POST" role="form">
        @Html.HiddenFor(e=>Model.Id)
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input type="text" class="form-control" asp-for="FirstName" 
                placeholder="Enter First Name" value=@Model.FirstName>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input type="text" class="form-control" asp-for="LastName"
                placeholder="Enter Last Name" value=@Model.LastName>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telephone">Telephone</label>
            <input type="text" class="form-control" asp-for="Telephone" 
                placeholder="Enter Telephone" value=@Model.Telephone>
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="email" class="form-control" asp-for="Email" 
                placeholder="Enter Email Address" value=@Model.Email>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="companyId">Select Company:</label>
            <select class="form-control" asp-for=CompanyId>
                @foreach (var company in ViewBag.Companies)
                {

                    @if (Model.CompanyId == company.Id){
                        <option selected value=@company.Id>@company.Name</option>
                    } else {
                        <option value=@company.Id>@company.Name</option>
                    }
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Update Employee</button>
    </form>
</div>

