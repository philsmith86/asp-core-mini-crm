@model AspMiniCrm.ViewModels.EmployeeViewModel;

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="my-auto" style="height: 20px;"></div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Employees</th>
            </tr>
            <tr>
                <td>
                    <table class="table table-bordered">
                        <thead>
                            <tr class="active">
                                <th scope="col">Id</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Company</th>
                                <th scope="col">Email</th>
                                <th scope="col">Telephone</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model.Employees)
                            {
                                <tr>
                                    <td>@employee.Id</td>
                                    <td>@employee.FirstName</td>
                                    <td>@employee.LastName</td>
                                    <td>@employee.Company.Name</td>
                                    <td>@employee.Email</td>
                                    <td>@employee.Telephone</td>
                                    <td>
                                        @Html.ActionLink("Edit", "EditEmployee", "Employees", new { employeeId = employee.Id }, new { @class = "btn btn-primary btn-block" })
                                        <form asp-for="DeleteEmployee">
                                            @Html.HiddenFor(e => employee.Id)
                                            @Html.ActionLink("Delete", "DeleteEmployee", "Employees", new { employeeId = employee.Id }, new { @class = "btn btn-danger btn-block" })
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.ActionLink("Create New Employee", "CreateEmployee", "Employees", null, new { @class = "btn btn-success" })
                </td>
            </tr>
        </thead>
    </table>
</div>
